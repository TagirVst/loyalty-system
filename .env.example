# Окружение
ENV=dev

# База данных PostgreSQL
POSTGRES_DB=loyalty_db
POSTGRES_USER=loyalty_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Безопасность
SECRET_KEY=your_32_character_secret_key_here_123456
ADMIN_LOGIN=admin
ADMIN_PASSWORD=your_secure_admin_password

# Telegram боты
TELEGRAM_TOKEN_CLIENT=your_client_bot_token_here
TELEGRAM_TOKEN_BARISTA=your_barista_bot_token_here

# API
API_BASE_URL=http://api:8000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
